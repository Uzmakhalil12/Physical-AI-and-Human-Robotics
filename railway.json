{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["backend/**"]
  },
  "deploy": {
    "startCommand": "pip install -r backend/requirements.txt && uvicorn backend.main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/health"
  }
}
